        <% result.articles.rows.forEach(article =>{ %>
            <div class="jumbotron">
                <h1 class="display-4"><%= article.title%></h1>
                <hr class="my-4">
                <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
                <p class="lead">
                  <a class="btn btn-primary btn-lg" href="/<%= article.slug%>" role="button">Learn more</a>
                </p>
              </div>
        <% }); %>
        <div class="row">
            <div class="col col-12" id="next">


                <% if(result.articles.page > 2){ %>
                    <a href="/articles/page/<%= result.articles.page - 1 %>"><<< Previous</a>
                <% } else if (result.page == 2) {%>
                    <a href="/"><<< Previous</a>
                <% } %>



               <% if(result.next){ %>
                <a href="/articles/page/<%= result.page + 1 %>">Next >>></a>
                <% } %>

            </div>
            <hr>
          </div>
    </div>
